<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
        >

            <TextView
                android:id="@+id/tv_season"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="18sp"
            />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:layout_alignParentRight="true"
                android:textSize="18sp"
            />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
        >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_p1"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                />

                <TextView
                    android:id="@+id/tv_p1_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_p2"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                    android:gravity="center"
                />

                <TextView
                    android:id="@+id/tv_p2_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_p3"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                />

                <TextView
                    android:id="@+id/tv_p3_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_p4"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                />

                <TextView
                    android:id="@+id/tv_p4_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_p5"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                />

                <TextView
                    android:id="@+id/tv_p5_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"
                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_p6"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                />

                <TextView
                    android:id="@+id/tv_p6_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"
                />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="+"
                android:textColor="@android:color/black"
                android:textSize="24sp"
            />

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
            >

                <TextView
                    android:id="@+id/tv_te"
                    style="@style/text_style"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/red_cicle"
                />

                <TextView
                    android:id="@+id/tv_te_zodiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:typeface="monospace"

                />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
